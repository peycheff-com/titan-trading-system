        "id": {
          "type": "string",
          "pattern": "^[0-9A-Z]{26}$",
          "default": "00000000000000000000000000"
        },
        "type": {
          "type": "string"
        },
        "version": {
          "type": "integer"
        },
        "schema_version": {
          "type": "integer",
          "default": 1,
          "description": "Envelope schema version for backwards-compatibility enforcement"
        },
        "ts": {
          "type": "integer",
          "default": 0
        },
        "producer": {
          "type": "string"
        },
        "correlation_id": {
          "type": "string",
          "default": "00000000000000000000000000"
        },
        "causation_id": {
          "type": "string"
        },
        "partition_key": {
          "type": "string"
        },
        "idempotency_key": {
          "type": "string"
        },
        "sig": {
          "type": "string"
        },
        "key_id": {
          "type": "string"
        },
        "nonce": {
          "type": "string"
        },
        "payload": {
          "type": "object",
          "additionalProperties": {}
        }
      },
      "required": [
        "type",
        "version",
        "schema_version",
        "producer",
        "payload"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}