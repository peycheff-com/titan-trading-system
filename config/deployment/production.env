# Production Environment Configuration
# Requirements: 7.1 - Environment-specific deployment configurations

NODE_ENV=production
LOG_LEVEL=info

# Service Ports
CONSOLE_PORT=3001
EXECUTION_PORT=3002
BRAIN_PORT=3100
SCAVENGER_PORT=8081

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=titan_brain
DB_USER=titan
DB_PASSWORD=${TITAN_DB_PASSWORD}

# Redis Configuration
REDIS_URL=redis://localhost:6379/1

# Deployment Settings
DEPLOYMENT_MODE=rolling
BACKUP_ON_DEPLOY=true
ROLLBACK_ON_FAILURE=true
MAX_WAIT=120
HEALTH_CHECK_INTERVAL=5

# Production-specific settings
HOT_RELOAD=false
DEBUG_MODE=false
MOCK_EXCHANGES=false
RATE_LIMIT_DISABLED=false

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
METRICS_PORT=9090
ALERTMANAGER_ENABLED=true

# Security (Production)
HMAC_VALIDATION=true
SSL_ENABLED=true
CORS_ORIGIN=https://titan.yourdomain.com

# Performance
PM2_INSTANCES=1
MAX_MEMORY_RESTART=500M
NODE_OPTIONS=--max-old-space-size=512

# Backup Configuration
BACKUP_RETENTION_DAYS=30
S3_BACKUP_ENABLED=false
AWS_S3_BUCKET=${TITAN_S3_BUCKET}
AWS_REGION=us-east-1