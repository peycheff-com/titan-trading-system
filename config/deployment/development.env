# Development Environment Configuration
# Requirements: 7.1 - Environment-specific deployment configurations

NODE_ENV=development
LOG_LEVEL=debug

# Service Ports
CONSOLE_PORT=3001
EXECUTION_PORT=3002
BRAIN_PORT=3100
SCAVENGER_PORT=8081

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=titan_brain_dev
DB_USER=titan_dev
DB_PASSWORD=

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Deployment Settings
DEPLOYMENT_MODE=standard
BACKUP_ON_DEPLOY=true
ROLLBACK_ON_FAILURE=true
MAX_WAIT=60
HEALTH_CHECK_INTERVAL=2

# Development-specific settings
HOT_RELOAD=true
DEBUG_MODE=true
MOCK_EXCHANGES=false
RATE_LIMIT_DISABLED=true

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
METRICS_PORT=9090

# Security (Development)
HMAC_VALIDATION=false
SSL_ENABLED=false
CORS_ORIGIN=*