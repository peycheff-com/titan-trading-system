# Staging Environment Configuration
# Requirements: 7.1 - Environment-specific deployment configurations

NODE_ENV=staging
LOG_LEVEL=debug

# Service Ports
CONSOLE_PORT=3001
EXECUTION_PORT=3002
BRAIN_PORT=3100
SCAVENGER_PORT=8081

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=titan_brain_staging
DB_USER=titan_staging
DB_PASSWORD=${TITAN_STAGING_DB_PASSWORD}

# Redis Configuration
REDIS_URL=redis://localhost:6379/2

# Deployment Settings
DEPLOYMENT_MODE=blue-green
BACKUP_ON_DEPLOY=true
ROLLBACK_ON_FAILURE=true
MAX_WAIT=90
HEALTH_CHECK_INTERVAL=3

# Staging-specific settings
HOT_RELOAD=false
DEBUG_MODE=true
MOCK_EXCHANGES=true
RATE_LIMIT_DISABLED=false

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
METRICS_PORT=9090
ALERTMANAGER_ENABLED=false

# Security (Staging)
HMAC_VALIDATION=true
SSL_ENABLED=false
CORS_ORIGIN=https://staging.titan.yourdomain.com

# Performance
PM2_INSTANCES=1
MAX_MEMORY_RESTART=400M
NODE_OPTIONS=--max-old-space-size=384

# Backup Configuration
BACKUP_RETENTION_DAYS=7
S3_BACKUP_ENABLED=false