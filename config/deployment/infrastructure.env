# Titan Infrastructure Environment Configuration
# This file contains environment-specific settings for infrastructure provisioning

# System Requirements
MIN_RAM_GB=8
MIN_CPU_CORES=4
MIN_DISK_GB=50

# Node.js Configuration
NODE_VERSION=18
NPM_REGISTRY=https://registry.npmjs.org/

# Redis Configuration
REDIS_PORT=6379
REDIS_MAX_MEMORY=2gb
REDIS_MAX_MEMORY_POLICY=allkeys-lru
REDIS_BIND_ADDRESS=127.0.0.1

# SSL Configuration
SSL_EMAIL=
SSL_DOMAIN=
SSL_AUTO_RENEWAL=true

# Security Configuration
UFW_DEFAULT_INCOMING=deny
UFW_DEFAULT_OUTGOING=allow
FAIL2BAN_BAN_TIME=3600
FAIL2BAN_FIND_TIME=600
FAIL2BAN_MAX_RETRY=3

# System Limits
SOFT_NOFILE=65536
HARD_NOFILE=65536
SOFT_NPROC=32768
HARD_NPROC=32768

# Network Buffers
NET_CORE_RMEM_MAX=16777216
NET_CORE_WMEM_MAX=16777216
NET_IPV4_TCP_RMEM="4096 87380 16777216"
NET_IPV4_TCP_WMEM="4096 65536 16777216"
NET_CORE_NETDEV_MAX_BACKLOG=5000

# Kernel Parameters
VM_SWAPPINESS=10

# Titan Configuration
TITAN_USER=titan
TITAN_BASE_PATH=/opt/titan
TITAN_LOG_PATH=/opt/titan/logs
TITAN_CONFIG_PATH=/opt/titan/config
TITAN_BACKUP_PATH=/opt/titan/backups

# Automatic Updates
AUTO_UPDATES_ENABLED=true
AUTO_UPDATES_SECURITY_ONLY=true
AUTO_REBOOT_ENABLED=false
AUTO_REBOOT_TIME=02:00

# Monitoring
LOG_ROTATION_ENABLED=true
LOG_MAX_SIZE=100M
LOG_ROTATE_COUNT=10
LOG_COMPRESS=true

# Timezone and Locale
SYSTEM_TIMEZONE=UTC
SYSTEM_LOCALE=en_US.UTF-8

# Swap Configuration
SWAP_ENABLED=true
SWAP_SIZE=2G