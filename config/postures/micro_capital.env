# =============================================================================
# TITAN PRODUCTION LAUNCH POSTURE - MICRO CAPITAL ($50-$100)
# =============================================================================
# Optimized for testing with minimal capital using leverage.
# All phases enabled for capital graduation testing.
#
# POSTURE: Single venue, 1 symbol, 10x max leverage, tight risk controls
# =============================================================================

# -----------------------------------------------------------------------------
# IDENTITY & MODE
# -----------------------------------------------------------------------------
TITAN_ENVIRONMENT=production
TITAN_POSTURE=micro_capital
TITAN_DEFAULT_ARMED=false
TITAN_REQUIRE_EXPLICIT_ARM=true

# -----------------------------------------------------------------------------
# VENUE CONSTRAINTS
# -----------------------------------------------------------------------------
# Binance Futures for leverage trading
TITAN_ALLOWED_VENUES=binance_futures
TITAN_MAX_VENUES=1

# -----------------------------------------------------------------------------
# SYMBOL WHITELIST
# -----------------------------------------------------------------------------
# Single symbol for focused capital deployment
TITAN_SYMBOL_WHITELIST=BTCUSDT
TITAN_MAX_SYMBOLS=1

# -----------------------------------------------------------------------------
# POSITION LIMITS (MICRO SCALE)
# -----------------------------------------------------------------------------
# Scaled for $50-$100 account with leverage
TITAN_MAX_POSITION_NOTIONAL_USD=100
TITAN_MAX_TOTAL_EXPOSURE_USD=200
TITAN_MAX_SINGLE_ORDER_SIZE_USD=50
TITAN_MAX_LEVERAGE=10
TITAN_MAX_OPEN_ORDERS=2

# -----------------------------------------------------------------------------
# LOSS LIMITS (TIGHT - 20% DAILY MAX)
# -----------------------------------------------------------------------------
# Aggressive protection given small capital base
TITAN_DAILY_LOSS_LIMIT_USD=20
TITAN_DAILY_LOSS_LIMIT_PERCENT=20
TITAN_HALT_ON_DAILY_LOSS=true

# -----------------------------------------------------------------------------
# RATE LIMITS
# -----------------------------------------------------------------------------
TITAN_MAX_ORDERS_PER_MINUTE=5
TITAN_MAX_ORDERS_PER_HOUR=30
TITAN_MIN_ORDER_INTERVAL_MS=2000

# -----------------------------------------------------------------------------
# STALENESS GATES
# -----------------------------------------------------------------------------
TITAN_SIGNAL_STALENESS_MS=3000
TITAN_PRICE_STALENESS_MS=2000
TITAN_HALT_ON_STALE_DATA=true

# -----------------------------------------------------------------------------
# PHASE CONFIGURATION (ALL ENABLED FOR GRADUATION)
# -----------------------------------------------------------------------------
TITAN_PHASE1_ENABLED=true
TITAN_PHASE2_ENABLED=true
TITAN_PHASE3_ENABLED=true

# Graduation thresholds (equity-based)
TITAN_P2_ENTRY_EQUITY=75
TITAN_P2_FULL_EQUITY=150
TITAN_P3_ENTRY_EQUITY=300

# -----------------------------------------------------------------------------
# RECONCILIATION
# -----------------------------------------------------------------------------
TITAN_RECONCILE_INTERVAL_MS=30000
TITAN_RECONCILE_TOLERANCE_USD=5
TITAN_HALT_ON_RECONCILE_MISMATCH=true

# -----------------------------------------------------------------------------
# CIRCUIT BREAKERS (AGGRESSIVE)
# -----------------------------------------------------------------------------
TITAN_CIRCUIT_BREAKER_ENABLED=true
TITAN_CB_ORDER_REJECT_THRESHOLD=3
TITAN_CB_LATENCY_THRESHOLD_MS=3000
TITAN_CB_RECOVERY_TIME_MS=60000
TITAN_CB_CONSECUTIVE_LOSS_LIMIT=2
TITAN_CB_MIN_EQUITY_USD=25

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
# HMAC_SECRET must be set externally
TITAN_REQUIRE_SIGNED_COMMANDS=true
TITAN_POLICY_HASH_ENFORCEMENT=true

# -----------------------------------------------------------------------------
# MONITORING
# -----------------------------------------------------------------------------
TITAN_METRICS_ENABLED=true
TITAN_METRICS_PORT=9090
TITAN_HEALTH_PORT=8080

# -----------------------------------------------------------------------------
# ALERTS
# -----------------------------------------------------------------------------
TITAN_ALERT_CHANNELS=telegram
TITAN_SURVIVAL_ALERTS_ONLY=true
