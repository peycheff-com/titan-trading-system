{
  "dashboard": {
    "title": "Titan Trading System - Production Monitoring",
    "tags": ["titan", "trading", "production"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Health Status",
        "type": "stat",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "titan_health_status",
            "legendFormat": "{{component}}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "justifyMode": "center"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            },
            "mappings": [
              { "value": 0, "text": "Unhealthy" },
              { "value": 1, "text": "Healthy" }
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "Account Equity (USD)",
        "type": "graph",
        "gridPos": { "x": 6, "y": 0, "w": 9, "h": 4 },
        "targets": [
          {
            "expr": "titan_equity_usd",
            "legendFormat": "Equity",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "currencyUSD",
            "label": "Equity"
          }
        ],
        "alert": {
          "name": "Equity Drawdown Alert",
          "conditions": [
            {
              "evaluator": {
                "params": [5],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "last"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "Drawdown exceeds 5%",
          "name": "Drawdown > 5%",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 3,
        "title": "Current Drawdown (%)",
        "type": "gauge",
        "gridPos": { "x": 15, "y": 0, "w": 4, "h": 4 },
        "targets": [
          {
            "expr": "titan_drawdown_percent",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 3, "color": "yellow" },
                { "value": 5, "color": "orange" },
                { "value": 7, "color": "red" }
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 10
          }
        }
      },
      {
        "id": 4,
        "title": "Signal Processing Rate (signals/min)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "rate(titan_signals_total[5m]) * 60",
            "legendFormat": "{{source}} - {{result}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Signals/min"
          }
        ]
      },
      {
        "id": 5,
        "title": "Order Execution Latency (P95)",
        "type": "graph",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(titan_order_latency_seconds_bucket[5m]))",
            "legendFormat": "P95 Latency",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(titan_order_latency_seconds_bucket[5m]))",
            "legendFormat": "P99 Latency",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Latency"
          }
        ],
        "alert": {
          "name": "High Order Latency",
          "conditions": [
            {
              "evaluator": {
                "params": [1],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "Order latency exceeds 1 second",
          "name": "Order Latency > 1s",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 6,
        "title": "Position P&L by Symbol",
        "type": "graph",
        "gridPos": { "x": 0, "y": 10, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "titan_position_pnl_usd",
            "legendFormat": "{{symbol}} {{direction}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "currencyUSD",
            "label": "P&L"
          }
        ]
      },
      {
        "id": 7,
        "title": "Order Fill Rate (%)",
        "type": "gauge",
        "gridPos": { "x": 12, "y": 10, "w": 6, "h": 6 },
        "targets": [
          {
            "expr": "titan_order_fill_rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 80, "color": "yellow" },
                { "value": 90, "color": "green" }
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "alert": {
          "name": "Low Fill Rate",
          "conditions": [
            {
              "evaluator": {
                "params": [80],
                "type": "lt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "last"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "Order fill rate below 80%",
          "name": "Fill Rate < 80%",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 8,
        "title": "Active Positions & Total Leverage",
        "type": "stat",
        "gridPos": { "x": 18, "y": 10, "w": 6, "h": 6 },
        "targets": [
          {
            "expr": "titan_active_positions",
            "legendFormat": "Active Positions",
            "refId": "A"
          },
          {
            "expr": "titan_total_leverage",
            "legendFormat": "Total Leverage",
            "refId": "B"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 9,
        "title": "Signal Results Distribution",
        "type": "piechart",
        "gridPos": { "x": 0, "y": 16, "w": 8, "h": 6 },
        "targets": [
          {
            "expr": "sum by (result) (titan_signals_total)",
            "legendFormat": "{{result}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": { "x": 8, "y": 16, "w": 8, "h": 6 },
        "targets": [
          {
            "expr": "rate(titan_process_cpu_seconds_total[5m]) * 100",
            "legendFormat": "CPU %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "CPU Usage"
          }
        ]
      },
      {
        "id": 11,
        "title": "Memory Usage (MB)",
        "type": "graph",
        "gridPos": { "x": 16, "y": 16, "w": 8, "h": 6 },
        "targets": [
          {
            "expr": "titan_process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "Memory (MB)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "decmbytes",
            "label": "Memory"
          }
        ]
      }
    ]
  }
}
