{
  "name": "titan-brain",
  "version": "1.0.0",
  "description": "Titan Phase 5 - The Brain Orchestrator: Master control system for capital allocation, risk management, and strategy coordination",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && mkdir -p dist/db && cp src/db/schema.sql dist/db/",
    "start": "echo '[DEBUG] STARTING_BUILD' && npm run build && echo '[DEBUG] BUILD_COMPLETE' && npm run migrate && node dist/index.js",
    "dev": "tsc && node --watch dist/index.js",
    "test": "npm run test:unit",
    "test:unit": "jest --config jest.config.cjs",
    "test:integration": "jest --config jest.integration.config.js",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:watch": "jest --watch --config jest.config.cjs",
    "test:watch:integration": "jest --watch --config jest.integration.config.js",
    "test:coverage": "jest --coverage --config jest.config.cjs",
    "test:coverage:integration": "jest --coverage --config jest.integration.config.js",
    "test:coverage:all": "npm run test:coverage && npm run test:coverage:integration",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "node dist/db/migrate.js"
  },
  "keywords": [
    "trading",
    "crypto",
    "orchestrator",
    "capital-allocation",
    "risk-management",
    "bybit",
    "binance"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/websocket": "^11.2.0",
    "better-sqlite3": "^9.2.2",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-raw-body": "^5.0.0",
    "pg": "^8.11.3",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "redis": "^4.6.12",
    "typescript": "^5.3.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "node-fetch": "^3.3.2",
    "ts-jest": "^29.1.1"
  }
}
