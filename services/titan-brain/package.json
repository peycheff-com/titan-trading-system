{
  "name": "titan-brain",
  "version": "1.0.0",
  "description": "Titan Phase 5 - The Brain Orchestrator: Master control system for capital allocation, risk management, and strategy coordination",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && mkdir -p dist/db && cp src/db/schema.sql dist/db/",
    "build:all": "npm run build",
    "start": "echo '[DEBUG] STARTING_BUILD' && npm run build && echo '[DEBUG] BUILD_COMPLETE' && npm run migrate && node dist/index.js",
    "dev": "tsc && node --watch dist/index.js",
    "test": "npm run test:unit",
    "task:rebuild": "node dist/index.js task:rebuild",
    "task:reconcile": "node dist/index.js task:reconcile",
    "test:unit": "jest --config jest.config.cjs",
    "test:integration": "jest --config jest.integration.config.cjs",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:watch": "jest --watch --config jest.config.cjs",
    "test:watch:integration": "jest --watch --config jest.integration.config.cjs",
    "test:coverage": "jest --coverage --config jest.config.cjs",
    "test:coverage:integration": "jest --coverage --config jest.integration.config.cjs",
    "test:coverage:all": "npm run test:coverage && npm run test:coverage:integration",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "node dist/db/migrate.js",
    "db:migrate": "../../scripts/ops/run_migrations.sh"
  },
  "keywords": [
    "trading",
    "crypto",
    "orchestrator",
    "capital-allocation",
    "risk-management",
    "bybit",
    "binance"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@titan/shared": "*",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.7.3",
    "fastify-raw-body": "^5.0.0",
    "ioredis": "^5.9.3",
    "jsonwebtoken": "^9.0.2",
    "nats": "^2.29.3",
    "pg": "^8.13.1",
    "prom-client": "^15.1.3",
    "redis": "^4.7.0",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/ws": "^8.18.1",
    "better-sqlite3": "^12.6.2",
    "eslint-plugin-functional": "^9.0.2",
    "fast-check": "^4.4.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "node-fetch": "^3.3.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
