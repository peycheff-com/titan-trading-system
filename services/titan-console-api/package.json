{
  "name": "titan-console-api",
  "version": "1.0.0",
  "description": "Titan Console API - BFF for Operator Console",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "dev": "tsc -p tsconfig.build.json && node --watch dist/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --ci --coverage"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@titan/shared": "^1.0.0",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.3",
    "fastify-plugin": "5.1.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^9.0.0",
    "jest": "^29.7.0",
    "pg": "^8.18.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.3"
  }
}
