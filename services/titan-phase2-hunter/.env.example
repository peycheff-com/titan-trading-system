# Titan Phase 2 - The Hunter Environment Configuration

# Binance API Configuration (for CVD data source)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Bybit API Configuration (for execution target)
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# Master Password for Credential Encryption
TITAN_MASTER_PASSWORD=your_master_password_here

# Environment Configuration
NODE_ENV=development

# Redis Configuration (for inter-process communication)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/titan-phase2-hunter.log

# Risk Management Configuration
MAX_LEVERAGE=5
MAX_DAILY_DRAWDOWN=0.07
MAX_PORTFOLIO_HEAT=0.15

# Exchange Configuration
BYBIT_TESTNET=true
BINANCE_TESTNET=false

# WebSocket Configuration
WS_RECONNECT_DELAY=2000
WS_MAX_RETRIES=3

# Execution Configuration
ORDER_TIMEOUT=60000
POSITION_SIZE_MULTIPLIER=1.0