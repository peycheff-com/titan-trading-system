{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@types/*": ["src/types/*"],
      "@engine/*": ["src/engine/*"],
      "@execution/*": ["src/execution/*"],
      "@portfolio/*": ["src/portfolio/*"],
      "@exchanges/*": ["src/exchanges/*"],
      "@console/*": ["src/console/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
