{
  "name": "titan-trading-system",
  "private": true,
  "description": "Titan Trading System Monorepo",
  "workspaces": [
    "services/*"
  ],
  "packageManager": "npm@11.6.2",
  "scripts": {
    "start": "echo 'Use npm run start:<service> to start a specific service'",
    "start:brain": "npm start -w services/titan-brain",
    "start:execution": "cd services/titan-execution-rs && cargo run --release",
    "start:console": "npm start -w services/titan-console",
    "start:scavenger": "npm start -w services/titan-phase1-scavenger",
    "start:hunter": "npm start -w services/titan-phase2-hunter",
    "start:sentinel": "npm start -w services/titan-phase3-sentinel",
    "start:powerlaw-lab": "npm start -w services/titan-powerlaw-lab",
    "start:ai-quant": "npm start -w services/titan-ai-quant",
    "start:prod": "bash scripts/ops/start_production.sh",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:all": "turbo run test",
    "lint:all": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate:config": "npx ts-node scripts/validate-configs.ts",
    "sota:circular": "bash scripts/sota/check_circular.sh",
    "sota:arch": "bash scripts/sota/check_architecture.sh",
    "sota:complexity": "npx ts-node scripts/sota/rank_complexity.ts",
    "sota:god": "python3 scripts/sota/god_class_scan.py",
    "sota:dead": "bash scripts/sota/check_dead_code.sh",
    "sota:zombie": "python3 scripts/sota/zombie_scan.py",
    "sota:secrets": "python3 scripts/sota/secret_scan.py",
    "sota:flake": "bash scripts/sota/check_flakiness.sh",
    "sota:immutability": "npx eslint -c scripts/sota/immutability.config.mjs \"services/*/src/**/*.{ts,tsx}\"",
    "sota:audit": "npm audit --audit-level=high",
    "sota:license": "bash scripts/sota/check_license.sh",
    "sota:mutation": "npx stryker run stryker.config.mjs",
    "sota:bundle": "npx ts-node scripts/sota/check_bundle_size.ts",
    "sota:profile": "echo 'Install 0x manually: npx 0x -o -- npm start:brain' # Interactive profiling",
    "sota:impact": "bash scripts/sota/check_impact.sh",
    "sota:correctness": "npx jest tests/correctness",
    "sota:typecheck": "tsc -b",
    "sota:deps": "depcheck && npm audit --audit-level=high",
    "sota:sbom": "syft . -o cyclonedx-json=artifacts/valuation/sbom/sbom.json",
    "sota:valuation": "bash scripts/valuation/generate_valuation.sh",
    "sota:secrets:deep": "python3 scripts/sota/secret_scan_deep.py",
    "sota:api": "npx ts-node scripts/sota/check_api_drift.ts",
    "sota:rust:fmt": "cd services/titan-execution-rs && cargo fmt -- --check",
    "sota:rust:clippy": "cd services/titan-execution-rs && cargo clippy -- -D warnings",
    "sota:rust:test": "cd services/titan-execution-rs && cargo test",
    "sota:perf": "npx ts-node tests/perf/latency.bench.ts",
    "sota:db": "npx ts-node scripts/sota/check_db_migrations.ts",
    "sota:unit": "npm test",
    "sota:integration": "echo 'Run: npm run test:integration'",
    "sota:e2e": "echo 'Run: npx playwright test'",
    "sota:all": "npm run sota:circular && npm run sota:arch && npm run sota:complexity && npm run sota:god && npm run sota:dead && npm run sota:zombie && npm run sota:secrets && npm run sota:immutability && npm run sota:audit && npm run sota:license && npm run sota:bundle && npm run sota:correctness && npm run sota:typecheck && npm run sota:deps && npm run sota:rust:fmt && npm run sota:rust:clippy && npm run sota:rust:test && npm run sota:perf && npm run sota:db && npm run sota:unit"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "nats": "^2.29.3",
    "uuid": "^13.0.0",
    "vite": "^6.0.7",
    "weaviate-client": "^3.2.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/jest-runner": "^9.4.0",
    "@stryker-mutator/typescript-checker": "^9.4.0",
    "@types/jest": "^30.0.0",

    "axios": "^1.13.3",
    "commander": "^14.0.2",
    "cross-env": "^10.1.0",
    "cyclonedx-npm": "^1.0.0",
    "depcheck": "^1.4.7",
    "dependency-cruiser": "^17.3.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-sonarjs": "^3.0.5",
    "jest": "^30.2.0",
    "knip": "^5.82.1",
    "license-checker": "^25.0.1",
    "madge": "^8.0.0",
    "prettier": "^3.8.0",
    "tinybench": "^6.0.0",
    "ts-jest": "^29.4.6",
    "turbo": "^2.3.3",
    "typescript-eslint": "^8.53.0",
    "undici": "^7.19.1",
    "ws": "^8.19.0"
  },
  "overrides": {
    "d3-color": "^3.1.0"
  }
}
